{% extends 'base.html.twig' %}

{% block body_class %}layout--fullscreen layout--compact{% endblock %}

{% block content %}
    <text-view-app id="text-view-app"
                   init-urls="{{ urls }}"
                   init-data="{{ data }}"
                   init-user="{{ user }}"
                   debug="{{ debug ? 'true' : 'false' }}"></text-view-app>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    {{ encore_entry_script_tags('text-view') }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('text-view') }}
{% endblock %}