{% extends 'base.html.twig' %}

{% block content %}
    <div class="col-sm-12 ">
        <h2 class="h1">Search text</h2>
    </div>
    <div id="text-search-app">
        <person-search-app
            :is-editor="{{ is_granted('ROLE_EDITOR_VIEW') ? 'true' : 'false' }}"
            :is-view-internal="{{ is_granted('ROLE_VIEW_INTERNAL') ? 'true' : 'false' }}"
            init-urls="{{ urls }}"
            init-data="{{ data }}"
            init-identifiers="{{ identifiers }}"
            init-managements="{{ managements }}"
        />
    </div>
{% endblock %}

{% block javascript %}
    <script type="text/javascript" src="{{ asset("build/main.js") }}"></script>
    <script type="text/javascript" src="{{ asset("build/personsearch.js") }}"></script>
{% endblock %}
