{% extends 'base.html.twig' %}

{% block body_class %}layout--fullscreen layout--compact-footer{% endblock %}

{% block content %}
    <materiality-search-app id="materiality-search-app"
        :is-editor="{{ is_granted('ROLE_EDITOR_VIEW') ? 'true' : 'false' }}"
        :is-view-internal="{{ is_granted('ROLE_VIEW_INTERNAL') ? 'true' : 'false' }}"
        init-urls="{{ urls }}"
        init-data="{{ data }}"
        init-identifiers="{{ identifiers }}"
        init-managements="{{ managements }}"
        title = "{{ title }}"
    />
{% endblock %}

{% block javascript %}
    {{ parent() }}
    {{ encore_entry_script_tags('materiality-search') }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('materiality-search') }}
{% endblock %}